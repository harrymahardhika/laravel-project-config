{
    "preset": "laravel",
    "rules": {
        "class_attributes_separation": {
            "elements": {
                "const": "only_if_meta"
            }
        },
        "no_superfluous_phpdoc_tags": true,
        "phpdoc_align": {
            "align": "vertical",
            "tags": [
                "method",
                "param",
                "property-read",
                "property-write",
                "property",
                "return",
                "throws",
                "type",
                "var"
            ]
        },
        "phpdoc_order": {
            "order": ["method", "mixin", "property", "property-read", "param", "throws", "return"]
        },
        "yoda_style": true
    }
}
